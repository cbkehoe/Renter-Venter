<section id='show-page'>
    <div>Apartment Name</div>
    <div>
        <%= rent.apartment %>
    </div>
    <div>Address</div>
    <div>
        <%= rent.address%>
    </div>
    <div>Rating:</div>
    <div>
        <%= rent.vacant %>
    </div>
</section>
<select name='apartmentScore'>
    <option value='5'>5</option>
    <option value='4'>4</option>
    <option value='3'>3</option>
    <option value='2'>2</option>
    <option value='1'>1</option>
</select>

<% if (user) { %>
    <br><br>
    <h2>Vents</h2>
    <form id='add-vent-form' method='POST' action='/rents/<%= movie._id %>/vents'>
        <label>Vent:</label>
        <textarea name='content'></textarea>
        <label>Apartment Score:</label>
    </form>
    <% } %>

        <% if (movie.reviews.length) { %>
            <% let total=0 %>
                <% movie.reviews.forEach(function(r) { %>
                    <% total +=r.rating %>
                        <table>
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Date</th>
                                    <th>Review</th>
                                    <th>Rating</th>

                                    <th></th>
                                    <td>
                                        <%= r.rating %>
                                    </td>

                                    <td>
                                        </th>
                                        <% if (user && user._id.equals(r.user)) { %>
                                            <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                                                <button type="submit">X</button>
                                            </form>
                                            <% } %>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td class="review-user"><img src="<%= r.userAvatar %>">
                                        <%= r.userName %>
                                    </td>
                                    <td>
                                        <%= r.createdAt.toLocaleDateString() %>
                                    </td>
                                    <td>
                                        <%= r.content %>
                                    </td>
                                    <td>
                                        <%= r.rating %>
                                    </td>
                                </tr>
                                <% }); %>
                                    <tr>
                                        <td colspan="3"></td>
                                        <td><strong>
                                                <%= (total / movie.reviews.length).toFixed(1) %>
                                            </strong></td>
                                    </tr>
                            </tbody>
                        </table>
                        <% } else { %>
                            <h5>No Vents Yet</h5>
                            <% } %>